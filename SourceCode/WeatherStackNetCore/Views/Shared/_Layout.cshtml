<div class="container">
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <a class="navbar-brand link-dark" asp-controller="home" asp-action="Index">
            WeatherStack Menu
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="CurrentWeather" asp-action="IndexWithJQuery">
                        Current Weather (With JQuery, AJAX)
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="CurrentWeather" asp-action="IndexWithModel">
